<%- include('partials/header', { title: 'Computer List', bodyClass: 'light-mode' }) %>

<h1 class="mb-4">Computer List</h1>

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
	  <th>Status</th>
	  <th>Action</th>
      <th>MAC Address</th>
      <th>IP Address</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% computers.forEach(computer => { %>
      <tr>
        <td><%= computer.name %></td>
		<td class="text-center">
			<!-- Example static green or red light -->
			<span class="status-indicator bg-danger"></span> <!-- Red light for now, bg-success is green -->
			<span class="status-text">Off</span>
		</td>
		<td class="text-center">
			<div class="form-check form-switch d-inline-flex align-items-center">
			  <input class="form-check-input" type="checkbox" role="switch" id="wakeSwitch-<%= computer.id %>">
			  <label class="form-check-label ms-2" for="wakeSwitch-<%= computer.id %>">Wake</label>
			</div>
		</td>
		<td><%= computer.mac_address %></td>
        <td><%= computer.ip_address %></td>
        <td><%= computer.notes %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/manage" class="btn btn-primary">Manage Computers</a>
<%- include('partials/footer') %>
